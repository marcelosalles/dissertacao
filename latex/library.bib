author = {Mazuroski, Walter and Berger, Julien and Oliveira, Ricardo C.L.F. and Mendes, Nathan},
doi = {10.1080/19401493.2017.1414880},
file = {::},
issn = {19401507},
journal = {Journal of Building Performance Simulation},
keywords = {CFD in building performance,co-simulation,intelligent co-simulation,machine learning,recurrent neural network,whole-building energy simulation},
pages = {1--16},
title = {{An artificial intelligence-based method to efficiently bring CFD to building simulation}},
